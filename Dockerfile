ARG NODE_VERSION=hydrogen

FROM node:${NODE_VERSION}

ARG GANACHE_VERSION=7.9.1
ARG PRIV_KEY=0xe5127005b33e35e669aec6f463adc2c1eac00710bdfc299e0c0f46f786c5197a
ARG INIT_WEI=10000000000000000000000

EXPOSE 8545

ENV GANACHE_VERSION=$GANACHE_VERSION
ENV PRIV_KEY=$PRIV_KEY
ENV INIT_WEI=$INIT_WEI

RUN npm install -g ganache@$GANACHE_VERSION

CMD ganache --server.host="0.0.0.0" --wallet.accounts=$PRIV_KEY,$INIT_WEI